<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="eduhub_course_form_view" model="ir.ui.view">
            <field name="name">eduhub.course.form</field>
            <field name="model">eduhub.course</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <header>
                        <field name="status" widget="statusbar" options="{'clickable': True}" />
                    </header>

                    <sheet>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div class="oe_title" style="flex-grow: 2">
                                <h1>
                                    <field name="name" placeholder="Title"/>
                                </h1>
                            </div>
                            <div>
                                <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="write_date"/>
                            </group>
                            <group>
                                <field name="price"/>
                            </group>
                            <group>
                                <field name="duration"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Additional">
                                <group>
                                    <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                    <field name="description" />
                                </group>
                            </page>

                            <page string="Instructors">
                                <field name="instructors_ids" options="{'no_create': True}" />
                            </page>

                            <page string="Students">
                                <field name="students_ids" />
                            </page>

                            <page string="Groups">
                                <field name="groups_ids" />
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="message_ids" options="{'post_refresh': 'recipients'}" />
                    </div>
                </form>
            </field>
        </record>

        <record id="eduhub_course_tree_view" model="ir.ui.view">
            <field name="name">eduhub.course.tree</field>
            <field name="model">eduhub.course</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="create_date"/>
                    <field name="name"/>
                    <field name="price"/>
                    <field name="duration"/>
                    <field name="instructors_ids" widget="many2many_tags" />
                    <field name="status" />
                    <field name="tags_ids" widget="many2many_tags" />
                </tree>
            </field>
        </record>

        <record id="eduhub_course_graph_view" model="ir.ui.view">
            <field name="name">eduhub.course.graph</field>
            <field name="model">eduhub.course</field>
            <field name="arch" type="xml">
                <graph string="ModelTitle">
                    <field name="name"/>
                    <field name="students_count" type="row"/>
                </graph>
            </field>
        </record>

        <record id="eduhub_course_pivot_view" model="ir.ui.view">
            <field name="name">eduhub.course.pivot</field>
            <field name="model">eduhub.course</field>
            <field name="arch" type="xml">
                <pivot string="EduHUB Pivot View">
                    <field name="price" type="row"/>
                    <field name="duration" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="eduhub_course_search_view" model="ir.ui.view">
            <field name="name">eduhub.course.search</field>
            <field name="model">eduhub.course</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <filter string="Active" name="active" domain="[('status', '=', 'active')]" />
                    <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]" />
                    <group expand="1" string="Group By">
                        <filter string="Example Field" name="duration" domain="[]"
                                context="{'group_by':'duration'}"/>
                        <filter string="Status" name="status"
                                context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="eduhub_course_kanban_view" model="ir.ui.view">
            <field name="name">eduhub.course.kanban</field>
            <field name="model">eduhub.course</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="oe_kanban_details">
                                    <field name="image" widget="image" />
                                    <div style="display: flex; justify-content: space-between; align-items: center;">
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="name"/>
                                        </strong>

                                        <div class="duration">
                                            <field name="duration"/> month
                                        </div>
                                    </div>

                                    <hr/>
                                    <div class="instructors">
                                        <p>Instructors:</p>
                                        <field name="instructors_ids" />
                                    </div>
                                     <hr/>
                                    <div class="oe_kanban_tags_section">
                                        <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                    </div>

                                    <div class="O_kanban_record_buttons">
                                        <div class="oe_kanban_button_left">
                                            <field name="students_count" /> Student(s)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="eduhub_course_act_window" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eduhub.course</field>
            <field name="view_mode">kanban,tree,form,graph,pivot</field>
            <field name="context">{"search_default_example_field":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem id="eduhub_courses_menu" name="Courses" parent="eduhub_root_menu" action="eduhub_course_act_window" sequence="10" />

    </data>
</odoo>