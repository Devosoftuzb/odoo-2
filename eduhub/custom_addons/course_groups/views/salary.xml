<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="eduhub_invoice_salary_form_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.salary.form</field>
            <field name="model">eduhub.invoice.salary</field>
            <field name="arch" type="xml">
                <form string="Invoice Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="write_date"/>
                            </group>
                            <group>
                                <field name="price"/>
                            </group>
                            <group>
                                <field name="teacher_id" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Notes">
                                <field name="notes" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="eduhub_invoice_salary_tree_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.salary.tree</field>
            <field name="model">eduhub.invoice.salary</field>
            <field name="arch" type="xml">
                <tree string="Invoicec">
                    <field name="create_date"/>
                    <field name="teacher_id" />
                    <field name="price" />
                </tree>
            </field>
        </record>

        <record id="eduhub_invoice_salary_search_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.salary.search</field>
            <field name="model">eduhub.invoice.salary</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <group expand="1" string="Group By">
                        <filter string="Teachers" name="teacher_id"
                                context="{'group_by':'teacher_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="eduhub_invoice_salary_act_window" model="ir.actions.act_window">
            <field name="name">Salaries</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eduhub.invoice.salary</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_example_field":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no invoice click here to add new Invoice.
                </p>
            </field>
        </record>

        <menuitem id="eduhub_invoices_menu" name="Salaries" parent="eduhub_root_menu" action="eduhub_invoice_salary_act_window" sequence="10" />

    </data>
</odoo>