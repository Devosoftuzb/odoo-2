<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="eduhub_invoice_form_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.form</field>
            <field name="model">eduhub.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice Form">
                    <header>
                        <field name="status" widget="statusbar" options="{'clickable': True}" />
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="number" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="write_date"/>
                            </group>
                            <group>
                                <field name="amount_due"/>
                            </group>
                            <group>
                                <field name="amount_paid"/>
                            </group>
                            <group>
                                <field name="student_id" />
                            </group>
                            <group>
                                <field name="notes" />
                            </group>
                            <group>
                                <field name="color_code" string="Color" widget="color" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Courses">
                                <field name="courses_ids" options="{'no_create': True}" />
                            </page>

                            <page string="Payment Methods">
                                <field name="payment_method_id" />
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" />                                                                                                                                                            " />
                        <field name="message_ids" options="{'post_refresh': 'recipients'}" />
                    </div>
                </form>
            </field>
        </record>

        <record id="eduhub_invoice_tree_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.tree</field>
            <field name="model">eduhub.invoice</field>
            <field name="arch" type="xml">
                <tree string="Invoicec">
                    <field name="number"/>
                    <field name="create_date"/>
                    <field name="courses_ids" />
                    <field name="student_id" />
                    <field name="amount_due" />
                    <field name="amount_paid" />
                    <field name="status" />
                </tree>
            </field>
        </record>

        <record id="eduhub_invoice_calendar_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.calendar</field>
            <field name="model">eduhub.invoice</field>
            <field name="arch" type="xml">
                <calendar string="Invoices Calendar" date_start="create_date" color="color_code">
                    <field name="color_code" widget="color" />
                    <field name="number"/>
                    <field name="notes" />
                    <field name="create_uid" string="Created By"/>
                </calendar>
            </field>
        </record>


        <record id="eduhub_invoice_graph_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.graph</field>
            <field name="model">eduhub.invoice</field>
            <field name="arch" type="xml">
                <graph string="Invoices">
                    <field name="number"/>
                    <field name="amount_due" type="measure"/>
                    <field name="amount_paid" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="eduhub_group_pivot_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.pivot</field>
            <field name="model">eduhub.invoice</field>
            <field name="arch" type="xml">
                <pivot string="Invoice Pivot View">
                    <field name="amount_paid" type="row"/>
                    <field name="amount_due" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="eduhub_invoice_search_view" model="ir.ui.view">
            <field name="name">eduhub.invoice.search</field>
            <field name="model">eduhub.invoice</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]" />
                    <filter string="Paid" name="paid" domain="[('status', '=', 'paid')]" />
                    <filter string="Partially Paid" name="partially_paid" domain="[('status', '=', 'partially_paid')]" />
                    <filter string="Overdue" name="overdue" domain="[('status', '=', 'overdue')]" />
                    <filter string="Last 7 Days" name="date_range"/>
                    <group expand="1" string="Group By">
                        <filter string="Course" name="course" domain="[]"
                                context="{'group_by':'courses_ids'}"/>
                        <filter string="Status" name="status"
                                context="{'group_by':'status'}"/>
                        <filter string="Students" name="student_id"
                                context="{'group_by':'student_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="eduhub_invoice_act_window" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eduhub.invoice</field>
            <field name="view_mode">tree,form,calendar,graph,pivot</field>
            <field name="context">{"search_default_example_field":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no invoice click here to add new Invoice.
                </p>
            </field>
        </record>

        <menuitem id="eduhub_invoices_menu" name="Invoices" parent="eduhub_root_menu" action="eduhub_invoice_act_window" sequence="10" />

    </data>
</odoo>